<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="asset_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link href="/odoo_theme_background/static/src/less/custom.less" rel="stylesheet" type="text/less"/>
            <link href="/odoo_theme_background/static/src/less/admin.less" rel="stylesheet" type="text/less"/>
            <script src="/odoo_theme_background/static/src/js/custom.js" type="text/javascript"/>
            <script src="/odoo_theme_background/static/src/js/menu.js" type="text/javascript"/>
        </xpath>
    </template>
    <template id="asset_editor" inherit_id="odoo_theme_background.asset_backend">
        <xpath expr="." position="inside">
            <script groups="base.group_system" src="/odoo_theme_background/static/src/js/base.js" type="text/javascript"/>
        </xpath>
    </template>


    <template id="secondary_menu" inherit_id="web.menu_secondary_submenu">
         <xpath expr="//ul[@class='oe_secondary_submenu nav nav-pills nav-stacked']" position="attributes">
            <attribute name="class">oe_secondary_submenu nav nav-pills nav-stacked hide_secondary</attribute>
        </xpath>
    </template>
    <template id="secondary" inherit_id="web.menu_secondary">
        <xpath expr="//div[@class='o_sub_menu_content']//div[@class='oe_secondary_menu_section']" position="inside">
            <i class="fa fa-circle-o"/>
            <t t-if="menu.get('children') and menu['children']">
                <span class="sb-m"/>
            </t>
        </xpath>
    </template>
    <template id="menu_link" inherit_id="web.menu_link">
        <xpath expr="//a" position="inside">
            <t t-if="menu.get('children') and menu['children']">
                <span class="sb-m"/>
            </t>
        </xpath>
         </template>
    <template id="login_layout" inherit_id="web.menu_secondary">
        <xpath expr="//a[@class='o_sub_menu_logo']" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>
    </template>
</odoo>